#include "stdio.h"
#include <ctype.h>

void Main_Menu ()
{
	printf ("****** Welcome to Booking.com ******\n");
    printf ("If you want to register please enter 1\n ");
    printf ("If you already have an account please enter 2\n ");
}

void register_menu ()
{
	printf ("Please enter you name \n");
	printf ("Please enter you age \n");
	printf ("Please enter you mail \n");
	printf ("Please enter you phone number \n");
}

void Register (int *num)
{
	int *name , age , *mail , number;

	register_menu();

	scanf ("%s" , &name);
	scanf ("%d" , &age);
	scanf ("%s" , &mail);
	scanf ("%d" , &number);

	printf ("%s" , name);
	printf ("%d" , age);
	printf ("%s" , mail);
	printf ("%d" , number);
}

void Start()
{
	int run =1;
	int input;

	Main_Menu();

	while (run == 1)
	{
		scanf (" %d" , &input);

		switch (input)
		{
		case 1: Register(&input);
				break;
		}
	}
}


int main()
{
	Start();
}
