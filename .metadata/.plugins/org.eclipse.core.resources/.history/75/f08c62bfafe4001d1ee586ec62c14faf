#include "stdio.h"
#include <ctype.h>

void Main_Menu ()
{
	printf ("****** Welcome to Booking.com ******\n");
    printf ("If you want to register please enter a\n ");
    printf ("If you already have an account please enter b\n ");
}

void register_menu ()
{
	printf ("Please enter you name \n");
	printf ("Please enter you age \n");
	printf ("Please enter you mail \n");
	printf ("Please enter you phone number \n");
}

void Register ()
{
	int *name , *age , *mail , *number;
	gets(&name);

	if (!isdigit(name))
	{
		printf ("Invalid name\n");
		register_menu();
	}
	gets(&age);

	gets(&mail);
	gets(&number);
}

void Start()
{
	int run =1;
	char input;

	Main_Menu();

	while (run == 1)
	{
		scanf (" %c" , &input);

		switch (input)
		{
		case 'a': Register();
				break;
		}
	}
}


int main()
{
	Start();
}
