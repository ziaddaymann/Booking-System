void Register ()
{
	FILE *fp;
	char mail[50];
	char pass[50];


	///////////////////////////
	printf ("Please enter you Email \n");
	scanf("%s", mail);
	///////////////////////////////////


	printf ("Please enter you Password \n");
	scanf ("%c",&age);
	if (isdigit(age))
	{
		printf ("Invalid age please try again\n");
		Register();
	}

	else if (age <18)
	{
		printf ("This site only for adults above 18\n");
		Register();
	}

	//////////////////////////////////////




}

void Start()
{
	int run =1;
	char input;

	Main_Menu();

	while (run == 1)
	{
		scanf (" %c" , &input);

		switch (input)
		{
		case 'a': Register();
				break;
		}
	}
}


int main()
{
	Start();
}
