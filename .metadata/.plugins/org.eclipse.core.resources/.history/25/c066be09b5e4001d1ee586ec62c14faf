#include "stdio.h"
#include <ctype.h>

void Main_Menu ()
{
	printf ("****** Welcome to Booking.com ******\n");
    printf ("If you want to register please enter a\n ");
    printf ("If you already have an account please enter b\n ");
}

void register_menu ()
{
	printf ("Please enter you name \n");
	printf ("Please enter you age \n");
	printf ("Please enter you mail \n");
	printf ("Please enter you phone number \n");
}


void Register ()
{
	FILE *fp;
	char mail[50];
	char pass[50];
	char *find1;
	char *find2;

	char file[256] = "/Users/ziadayman/Desktop/Booking Site/Book1.txt";


	///////////////////////////
	printf ("Please enter you Email \n");
	scanf("%s", mail);
	*find1 = strchr(mail, '@');
	*find2 = strstr(mail, ".com");

	if (find1 == 1 && find2 == 1)
	{
		printf ("Valid Mail \n");
	}

	else
	{
		printf ("Invalid Mail\n");
		Register();
	}
	///////////////////////////////////


	printf ("Please enter you Password \n");
	scanf ("%s",pass);

	//////////////////////////////////////

	fp = fopen(file, "a");

	if (fp == NULL)
	{
	        printf("Error opening file %s\n", file);
	}

	fprintf(fp, "%s\n", mail);
	fprintf(fp, "%s\n", pass);

	fclose(fp);




}

void Start()
{
	int run =1;
	char input;

	Main_Menu();

	while (run == 1)
	{
		scanf (" %c" , &input);

		switch (input)
		{
		case 'a': Register();
				break;
		}
	}
}


int main()
{
	Start();
}
